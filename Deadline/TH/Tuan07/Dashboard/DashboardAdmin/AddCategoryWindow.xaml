<Window x:Class="DashboardAdmin.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DashboardAdmin"
        mc:Ignorable="d"
        Title="AddCategoryWindow" Height="200" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="15">
        <StackPanel VerticalAlignment="Top">
            <DockPanel>
                <Label DockPanel.Dock="Top" Content="Category" FontSize="18" />
                <TextBox Padding="5" Name="categoryNameTextbox" Foreground="Blue" Height="35" FontSize="16" VerticalContentAlignment="Center"/>
            </DockPanel>
            <Button Margin="20" Content="Add" Height="30" Width="100" Name="addCategory" Click="addCategory_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
